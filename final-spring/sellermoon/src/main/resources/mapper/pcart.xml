<resultMap type="java.util.Map" id="pcartMap"></resultMap>

	<select id="getAllPCartList" resultType="java.util.Map" parameterType="map">
		select cart_no,member_no,md_no,cart_quantity,order_type from tb_cart
		<where>
		<if test="cart_no>0">
		and cart_no=#{cart_no}
		</if>
		</where>
	</select>

	<select id="getPCart" resultType="String">
		select cart_no as cartNo from tb_cart where cart_no = 1
	</select>


	

